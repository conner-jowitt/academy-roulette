{
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "extends": "airbnb",
    "rules": {
      "max-len": ["warn", { "code": 100, "ignoreComments": true, "ignoreStrings": true }],
      "indent": [2, 4],
      "no-underscore-dangle": 0,
      "no-unused-vars": 1,
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "no-console": 0
    }
  }

